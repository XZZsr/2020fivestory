.header-tips {
    padding: 10rpx 20rpx;
    position: fixed;
    top: 50rpx;
    right: 80rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 56rpx;
    background: #FA729A;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
    border-radius: 10rpx;
    z-index: 9999;
}

.header-tips::before {
    content: '';
    position: absolute;
    top: -18rpx;
    right: 40rpx;
    width: 0;
    height: 0;
    border-width: 0 20rpx 24rpx;
    border-style: solid;
    border-color: transparent transparent #FA729A;
    /*透明 透明  灰*/
}